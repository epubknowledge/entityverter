{
  "name": "@epubknowledge/entityverter",
  "introName": "Entityverter",
  "version": "1.0.0",
  "description": "A NPM package that converts an ePub's entities from name and rendered to their respected numerical value. If a bad entity is found it will be deleted.",
  "main": "bin/index.js",
  "bin": {
    "entityverter": "bin/index.js",
    "evcli": "bin/cli.js"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "bin/",
    "common/",
    "src/",
    "json/"
  ],
  "engines": {
    "node": ">=14.0"
  },
  "os": [
    "darwin",
    "linux",
    "!win32"
  ],
  "scripts": {
    "link": "npm link",
    "unlink": "npm unlink",
    "lint": "eslint",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "__tests__",
      "bin",
      "common",
      "src"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/json/",
      "<rootDir>/__tests__/helpers"
    ]
  },
  "keywords": [
    "epub",
    "entity",
    "CLI"
  ],
  "author": "codingChewie",
  "license": "see license in LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epubknowledge/entityverter.git"
  },
  "bugs": {
    "url": "https://github.com/epubknowledge/entityverter/issues"
  },
  "homepage": "https://github.com/epubknowledge/entityverter#readme",
  "dependencies": {
    "chalk": "^4.1.1",
    "clear": "^0.1.0",
    "commander": "^7.2.0",
    "figlet": "^1.5.0",
    "fs-extra": "^10.0.0",
    "tmp": "^0.2.1",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "eslint": "^7.28.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.1"
  }
}
